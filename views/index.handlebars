<h1>Eat-da-Burgers!</h1>

<h2>List of burgers ready!</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
        <li>{{id}} {{burger_name}} <span><button class="changed-devoured" data-id="{{id}}">TIME TO EAT</button></span></li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Already</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
        <li>{{id}} {{burger_name}}</li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger!</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Name: </label>
        <input type="text" id="burg" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>